<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:elevation="10dp"
    android:layout_margin="5dp"
    app:cardMaxElevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvname"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvage"
            android:textSize="15dp"
            android:layout_below="@+id/tvname"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvcity"
            android:textSize="15dp"
            android:layout_below="@+id/tvage"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvmobile"
            android:textSize="15dp"
            android:layout_below="@+id/tvcity"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvidentity"
            android:textSize="15dp"
            android:layout_below="@+id/tvmobile"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvmarriedstatus"
            android:textSize="15dp"
            android:layout_below="@+id/tvidentity"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvedit"
            android:text="Edit"
            android:background="@drawable/round_corner_edit_dete_btn"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:paddingHorizontal="25dp"
            android:paddingVertical="3dp"
            android:textStyle="bold"
            android:layout_marginEnd="2dp"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:layout_below="@+id/tvmarriedstatus"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp" />
        <TextView
            android:id="@+id/tvdelete"
            android:text="Delete"
            android:background="@drawable/round_corner_edit_dete_btn"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="3dp"
            android:textStyle="bold"
            android:layout_marginEnd="2dp"
           android:layout_toStartOf="@+id/tvedit"
            android:textSize="15sp"
            android:layout_below="@+id/tvmarriedstatus"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/tvedit" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>